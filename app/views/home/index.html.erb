<header class="bg text-white py-5">
    <div class="container">
        <h1 class="display-4 txt fw-bold">
  <%= @pagecontent.home_header.split(' ', 2).join('<br>').html_safe %>
</h1>
        <%= link_to 'Job Openings', jobs_path, class: 'btn btn-outline-light mt-3' %>
    </div>
</header>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-5 pt-5">
                <h2>About Us</h2>
               <p><%= truncate(@pagecontent.about_us, length: 350) %></p>

                <a href="<%= about_path %>" class="arrow-link pb-2">
                    <i class="bi bi-arrow-right custom-button"></i>
                </a>
            </div>
            <div class="col-md-6">
                 <%= image_tag @pagecontent.home_img, alt: "CEO Image", class: "img-fluid rounded text-center", style: "max-width: 100%; height: 80%;" %>

            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5"><%= %></h2>
        <div class="row text-center">
            <div class="col-md-6">
                <i class="fas fa-search fa-3x mb-3"></i>
                <h5>Mission</h5>
                <p><%= simple_format(@pagecontent.mission) %></p>
            </div>
            <div class="col-md-6">
                <i class="fas fa-user-tie fa-3x mb-3"></i>
                <h5>Vision</h5>
                <p><%= simple_format(@pagecontent.vision) %></p>
            </div>
            
        </div>
    </div>
</section>

<section class="container py-5">
<div class="section-title d-flex justify-content-between align-items-center">
        <span>Latest job Openings</span>
        <a href="<%= jobs_path %>" class="arrow-link pb-2">
            <i class="bi bi-arrow-right custom-button"></i>
        </a>
    </div>
        <div class=" container d-flex ">
        <% @jobs.each do |job| %>
            <div class="job-card me-1 col-4">
            <h5 class="card-title pb-3 fw-bold"><%= job.title %></h5>
            <p><strong>Category:</strong> <%= job.category.name %></p>
            <p><strong>Submit application before:</strong> <%= job.closing_date.to_date %></p>
            <p><strong>Location:</strong><%= job.location %></p>
            <p><%= truncate(job.description, length: 250) %></p>
            <a href="<%= job_path(job) %>" class="text-white">View Job</a>
            </div>
        <% end %>
    </div>
</section>

