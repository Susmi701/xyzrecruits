<h2 class="text-center m-4 pt-4"> Skill Directory</h2>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-11">
            <%= render 'form'%>
            <table class="table table-striped table-hover table-bordered ">
                <thead >
                    <tr>
                        <th>Name</th>
                        <th>created_at</th>
                        <th>Actions</th>
                    </tr>    
                </thead>
                <tbody>
                    <% @skills.each do |skill| %>
                        <tr>
                            <td><%= skill.name %></td>
                            <td><%= skill.created_at.strftime('%Y-%m-%d')  %></td>
                            <td>
                                <% if (current_user) %>
                                       <%= link_to admin_skill_path(skill), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                                        <img src="https://cdn-icons-png.flaticon.com/512/6861/6861362.png" alt="Delete" style="height: 22px; width: 22px;">
                                    <% end %>
                                <%end%>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>                   
</div>
<div class="flickr_pagination my-4">
    <%= will_paginate @skills, :container => false %>
</div>