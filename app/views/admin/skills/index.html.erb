<h2 class="text-center m-4 pt-4"> Skill Directory</h2>
<div class="container ">
    <div class="row mt-5 justify-content-center">
        <div class="col-md-11">
    <%= turbo_frame_tag "new_skill" do %>
        <%= render "form", skill: @skill %>
      <% end %>
            <table class="table table-striped table-hover table-bordered ">
                <thead >
                    <tr>
                        <th>Name</th>
                         <th>created_at</th>
                        <th>Actions</th>
                    </tr>    
                </thead>
                <tbody id="table_skills">
                        <%= render @skills %>
                </tbody>
            </table>
        </div>
    </div>                   
<div class="flickr_pagination my-4">
    <%= will_paginate @skills, :container => false %>
</div>