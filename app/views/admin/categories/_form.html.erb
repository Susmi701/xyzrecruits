<%= form_for([:admin, @category], local: true, html: { class: 'mb-4 d-flex' }) do |form| %>
    <div class="form-group px-3 col-6" >
        <%= form.label :name, "Category Name", class: 'sr-only' %>
        <%= form.text_field :name, class: 'form-control', placeholder: 'Enter Category name' %>
        <%= render 'common/error_messages', errors: @category.errors[:name] %>
    </div>
    <div class="form-group mt-4">
        <%= form.submit  class: 'custom-button' %>
    </div>
<% end %>