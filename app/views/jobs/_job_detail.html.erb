  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @job.title %></h1>
  </div>

  <div class="d-flex flex-wrap">
    <div class="d-flex flex-column  flex-md-row w-100">
      <div class="col-md-4">
  <div class="mb-4">
    <h4>Location</h4>
    <p><%= @job.location %></p>
  </div>

  <div class="mb-4">
    <h4>Experience</h4>
    <p><%= @job.experience_required %> + years</p>
  </div>

  <div class="mb-4">
    <h4>Educational Qualification</h4>
    <p><%= @job.educational_qualification.humanize %></p>
  </div>

  <div class="mb-4">
    <h4>Job Type</h4>
    <p><%= @job.job_type.humanize %></p>
  </div>
  <div class="mb-4">
    <h4>Closing Date</h4>
    <p><%= @job.closing_date.to_date %></p>
  </div>
   <div class="d-flex flex-column my-4">
      <% if current_user %>
        <div>
          <%= link_to edit_admin_job_path(@job), class: "btn btn-secondary me-2" do %>
            Edit
          <% end %>

          <%= link_to admin_job_path(@job), method: :delete, class: "btn btn-danger me-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            Delete
          <% end %>
        </div>
      <% else %>
        <div>
          <%= link_to 'Apply for this Job', apply_job_path(@job), class: "custom-button text-white" %>
        </div>
      <% end %>
    </div>
</div>
      <div class="col-md-7 p-3">
        <h4>Description</h4>
        <p><strong>Category:</strong> <%= @job.category.name %></p>
        <p><strong>Skills Required:</strong> <%= @job.skills.map(&:name).join(', ') %></p>
        <p><%=simple_format(@job.description)  %></p>
      </div>
    </div>
   
  </div>

